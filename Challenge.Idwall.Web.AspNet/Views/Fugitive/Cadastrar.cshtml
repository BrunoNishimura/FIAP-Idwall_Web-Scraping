@model Challenge.Idwall.Web.AspNet.Models.FugitiveModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fugitivos - Cadastrar</title>
</head>
<body>
    <h1>Fugitivos - Cadastrar</h1>

    <form asp-action="Cadastrar" asp-controller="Fugitive" method="post">
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <label>Nome:</label>
                <div class="col-md-10">
                    <input asp-for="FullName" />
                </div>
            </div>

            <div class="form-group">
                <label>Nascimento:</label>
                <div class="col-md-10">
                    <input asp-for="BirthDay"  />
                </div>
            </div>

            <div class="form-group">
                <label>Gênero:</label>
                <div class="col-md-10">
                    <input asp-for="Gender"  />
                </div>
            </div>

            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a asp-controller="Fugitive" asp-action="Index" class="btn btn-warning">Voltar</a>
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </div>
            <hr />
        </div>
    </form>

    
</body>
</html>